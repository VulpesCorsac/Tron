#ifndef PLAYER_H_INCLUDED
#define PLAYER_H_INCLUDED

#include "Main.h"
#include "Point.h"
#include "Direction.h"

using namespace std;

// игрок
class Player {
public:
    type speed;
    vector < Point > turns;
    Direction direction;
    Point position;
    int team;

    // проверка валидности данных
    bool Check();

    // пустой конструктор
    Player();

    // конструктор по начальной точке и начальному направлению
    Player(Point starting_point, Direction starting_direction, int including_team);

    // поворот вправо
    void Turn_Right();

    // поворот влево
    void Turn_Left();

    // обновление
    void Update(type dt);

    // деструктор
    ~Player();

};



#endif // PLAYER_H_INCLUDED
