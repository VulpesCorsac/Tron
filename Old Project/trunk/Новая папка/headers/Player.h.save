#ifndef PLAYER_H_INCLUDED
#define PLAYER_H_INCLUDED

#include "Main.h"

// игрок
class Player {
public:
    // а я еще жив?
    bool alive;

    // а я бот?
    bool is_bot;

    // скорость
    type speed;

    // ID
    int ID;

    // точки поворотов
    vector < Point > turns;

    // текущее направление
    Direction direction;

    // текущая позиция
    Point position;

    // номер команды
    int team;

    // проверка валидности данных
    bool Check();

    // пустой конструктор
    Player();

    // конструктор по начальной точке и начальному направлению и т.д.
    Player(Point starting_point, Direction starting_direction, int including_team, int _ID, int spee);

    // поворот вправо
    void Turn_Right();

    // поворот влево
    void Turn_Left();

    // обновление
    void Update(type dt);

    // деструктор
    ~Player();

};

#endif // PLAYER_H_INCLUDED
